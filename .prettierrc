{
	"useTabs": true,
	"tabWidth": 1,
	"semi": true,
	"singleQuote": true,
	"quoteProps": "as-needed",
	"trailingComma": "es5",
	"bracketSpacing": true,
	"arrowParens": "always",
	"printWidth": 100,
	"endOfLine": "lf",
	"overrides": [
		{
			"files": "*.md",
			"options": {
				"printWidth": 80,
				"proseWrap": "always"
			}
		},
		{
			"files": "*.json",
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}

